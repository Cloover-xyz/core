{
  "name": "@cloover/core",
  "version": "1.0.0",
  "description": "Core contracts of Cloover's protocol",
  "author": "Cloover",
  "main": "index.js",
  "license": "AGPL-3.0-only",
  "keywords": [
    "protocol",
    "smart-contracts",
    "NFT",
    "raffle"
  ],
  "scripts": {
    "build": "forge build",
    "compile": "forge compile",
    "remap": "forge remappings > remappings.txt",
    "test": "forge test -vvv",
    "gas": "forge test -vvv --gas-report",
    "coverage": "forge coverage --report lcov && genhtml lcov.info --branch-coverage --output-dir coverage",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "husky": "8.0.2",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.1"
  },
  "lint-staged": {
    "*.sol": "forge fmt",
    "*.json": "yarn prettier",
    "*.yml": "yarn prettier"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
