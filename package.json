{
  "name": "cloover-core",
  "version": "1.0.0",
  "description": "Core contracts of Cloover's protocol",
  "author": "Cloover",
  "main": "index.js",
  "license": "AGPL-3.0-only",
  "keywords": [
    "protocol",
    "smart-contracts",
    "NFT",
    "raffle"
  ],
  "scripts": {
    "remap": "forge remappings",
    "postinstall": "husky install",
    "deploy:AccessController": "forge script script/00_AccessController.s.sol --rpc-url sepolia --broadcast --verify --optimize",
    "deploy:ImplementationManager": "forge script script/01_ImplementationManager.s.sol --rpc-url sepolia --broadcast --verify --optimize",
    "deploy:NFTWhitelist": "forge script script/02_NFTWhitelist.s.sol --rpc-url sepolia --broadcast --verify --optimize",
    "deploy:TokenWhitelist": "forge script script/03_TokenWhitelist.s.sol --rpc-url sepolia --broadcast --verify --optimize",
    "deploy:RandomProvider": "forge script script/04_RandomProvider.s.sol --rpc-url sepolia --broadcast --verify --optimize",
    "deploy:ClooverRaffleFactory": "forge script script/05_ClooverRaffleFactory.s.sol --rpc-url sepolia --broadcast --verify --optimize"
  },
  "dependencies": {
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.6.3",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8"
  },
  "lint-staged": {
    "*.sol": "forge fmt",
    "*.json": "pnpm prettier",
    "*.yml": "pnpm prettier"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
